{
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "files.watcherExclude": {
    "**/node_modules/**": true
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": [
    "source.organizeImports",
    "source.fixAll.eslint",
    "source.fixAll.stylelint"
  ],

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[feature]": {
    "editor.defaultFormatter": "marcosvfranco.cucumberautocomplete-behat"
  },
  "cSpell.words": [
    "Abend",
    "acks",
    "antd",
    "Antd",
    "Approvable",
    "ARCHIVABLE",
    "backchannel",
    "casbin",
    "codegen",
    "companyinvoicereturnaddress",
    "consigner",
    "consts",
    "counterparties",
    "counterparty",
    "csrftoken",
    "csstype",
    "dateutil",
    "deletable",
    "devcontainer",
    "envstate",
    "filesize",
    "freezegun",
    "getbuffer",
    "graphene",
    "gunicorn",
    "healthz",
    "INDICA",
    "invoicedb",
    "isort",
    "kibela",
    "klavis",
    "konva",
    "kubeconfig",
    "lefthook",
    "MFID",
    "mypy",
    "mysqladmin",
    "NAVIS",
    "nbytes",
    "ndev",
    "openapi",
    "pipenv",
    "previouscompanyinvoicereturnaddress",
    "proto",
    "sigterm",
    "relativedelta",
    "storycap",
    "testid",
    "TRANSITIONABLE",
    "unconfirm",
    "unfetch",
    "usecase",
    "usecases",
    "usefixtures",
    "pyright",
    "venv",
    "signin"
  ],
  "cucumberautocomplete.steps": [
    "tests/steps/**/*.ts",
    "node_modules/qa-lib/src/step_definitions/*.js"
  ],
  "cucumberautocomplete.strictGherkinCompletion": true
}
